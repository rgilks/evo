{
  "name": "evo-web",
  "version": "1.0.0",
  "type": "module",
  "description": "Evolution Simulation Web Application",
  "license": "MIT",
  "scripts": {
    "build": "wasm-pack build --target web --out-dir pkg",
    "build:web": "./scripts/build-web.sh",
    "dev": "node web/server.js",
    "serve": "npx serve web",
    "deploy": "npm run build:web && wrangler deploy",
    "deploy:staging": "npm run build:web && wrangler deploy --env staging",
    "deploy:production": "npm run build:web && wrangler deploy --env production",
    "dev:worker": "npm run build:web && wrangler dev",
    "setup": "./scripts/setup.sh"
  },
  "devDependencies": {
    "wasm-pack": "^0.12.0",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0"
  }
}
