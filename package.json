{
  "name": "evo-web",
  "version": "1.0.0",
  "type": "module",
  "description": "Evolution Simulation Web Application",
  "license": "MIT",
  "scripts": {
    "build:web": "./scripts/build-web.sh",
    "build:desktop": "./scripts/build-desktop.sh",
    "dev": "wrangler pages dev web",
    "dev:desktop": "./scripts/build-desktop.sh",
    "dev:desktop:headless": "./scripts/build-desktop.sh --no-run && cargo run --release --target aarch64-apple-darwin -- --headless",
    "deploy": "npm run build:web && wrangler pages deploy web --project-name evo",
    "setup": "./scripts/setup.sh",
    "deps:update": "npx npm-check-updates -u",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "wasm-pack": "^0.13.1",
    "wrangler": "^4.54.0"
  }
}
