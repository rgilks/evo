{
  "name": "evo-web",
  "version": "1.0.0",
  "type": "module",
  "description": "Evolution Simulation Web Application",
  "license": "MIT",
  "scripts": {
    "build": "wasm-pack build --target web --out-dir pkg",
    "build:web": "./scripts/build-web.sh",
    "build:desktop": "./scripts/build-desktop.sh",
    "dev": "node server.js",
    "dev:desktop": "./scripts/build-desktop.sh",
    "dev:desktop:headless": "./scripts/build-desktop.sh --no-run && cargo run --release --target aarch64-apple-darwin -- --headless",
    "deploy": "npm run build:web && wrangler deploy --env production",
    "deploy:dev": "npm run build:web && wrangler deploy",
    "dev:worker": "npm run build:web && wrangler dev",
    "setup": "./scripts/setup.sh"
  },
  "devDependencies": {
    "wasm-pack": "^0.12.0",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0"
  }
}
